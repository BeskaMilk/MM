<div>
<%- include('../partials/header_private.ejs') %>
</div>
<a href="/users/suppliers/new">
    <span style="font-size: 3em; color: Tomato;">
        <i class="fas fa-plus-circle"></i>
    </span>
</a>

<h2>Search Suppliers</h2>
    <form action="/users/suppliers/index" method="GET">
        <label>Name</label>
        <input type="text" name="name" value="<%= searchOptions.name %>" >
        <button type="submit">Search</button>
    </form>
    <br>


    <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">Supplier Name</th>
            <th scope="col">Phone Number</th>
            <th scope="col">WeChat ID</th>
            <th scope="col">Taobao link</th>
            <th scope="col"> </th>
            <th scope="col"> </th>
            <th scope="col"> </th>


          </tr>
        </thead>
        <% suppliers.forEach(supplier => { %>
        <tbody>
          <tr class="table-secondary">
            <th scope="row"><%= supplier.name %></th>
            <td><%= supplier.phone %></td>
            <td><%= supplier.weChat %></td>
            <td>Supplier's taobao link</td>
            <td><a href="/users/suppliers/index/<%= supplier.id %>">View</a></td>
            <td><a href="/users/suppliers/index/<%= supplier.id %>/edit">Edit</a></td>
            <td><%- include('../partials/deleteform', { url: `/users/suppliers/index/${supplier.id}` }) %></td>
          </tr>
        </tbody>
        <% }) %>

      </table> 
