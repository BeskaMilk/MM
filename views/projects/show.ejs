<div>
    <%- include('../partials/header_private.ejs') %>
</div>

<h2><%= project.name %></h2>
<h2><%= project.phone %></h2>
<h2><%= project.weChat %></h2>

    
<a href="/users/projects/index/<%= project.id %>/edit">Edit</a>
<%- include('../partials/deleteform', 
            { url: `/users/projects/index/${project.id}` }) %>


<div>
    <h2>Materials used in this project</h2>
</div>

<div class="container">
<div class="row">
    <div class="col">     
    </div>
    <div class="col-8">
        <div class="custom-cards-list">                    
                <% if (materialsByProject.length > 0) { %>
                <% materialsByProject.forEach(material => { %>
                    <a href="/users/materials/index/<%= material.id %>" class="custom-card 3">
                        <div class="custom-card_image">    
                            <img src="https://material-image-list.oss-cn-beijing.aliyuncs.com/<%= material.projectName %>/<%= material.ossFileName %>">
                        </div>
                    </a>
                    <% }) %>
                <% } %>
        </div>
    </div>
    <div class="col">     
    </div>
</div>
</div>

